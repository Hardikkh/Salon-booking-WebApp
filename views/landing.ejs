<%- include('partials/header'); -%>

<div class="container">
    <div class="row">
        <h2 style="text-align:center">Book your appointment</h2>
        <div style="width:30%; margin:0  auto;">
            <form action="/book" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="tel" name="mobile" placeholder="Mobile number">
                </div>
                <div class="form-group">
                    <input class="form-control" type="date" name="date" placeholder="Pick a date">
                </div>
                <div class="form-group">
                    <input class="form-control" type="time" name="time" step=3600 min="10:00" max="19:00" placeholder="Pick a time">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
        </div>
        <div  class="row">
            <% if(status==2){ %>
            <h3 style="text-align:center">All slots are full! Please try another slot</h3>
            <% } %>
            <% if(status==3){ %>
            <h3 style="text-align:center">Only one booking is allowed per person</h3>
            <% } %>
            <% if(status==4){ %>
            <h3 style="text-align:center">Sorry, We are only available on weekdays</h3>
            <% } %>
        </div>
    </div>
</div>

<%- include('partials/footer'); -%>